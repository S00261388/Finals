<Window x:Class="Finals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finals"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Booking Details" HorizontalAlignment="Left" Margin="35,44,0,0" VerticalAlignment="Top" Height="43" Width="163" FontSize="20" FontWeight="Bold"/>
        <DatePicker x:Name="datePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" HorizontalAlignment="Left" Margin="230,49,0,0" VerticalAlignment="Top"/>
        <Button Content="Delete Booking" Click="DeleteBooking_Click" HorizontalAlignment="Left" Margin="355,380,0,0" VerticalAlignment="Top"/>
        <Label Content="New Booking" HorizontalAlignment="Left" Margin="615,61,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <DatePicker x:Name="newBookingDatePicker" HorizontalAlignment="Left" Margin="615,131,0,0" VerticalAlignment="Top" />
        <ListBox x:Name="bookingsListBox" Margin="10,95,350,125" DisplayMemberPath="DisplayText" SelectedValuePath="BookingId"/>
        <TextBlock x:Name="capacityTextBlock" HorizontalAlignment="Left" Margin="10,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" Text="Capacity 40"></TextBlock>
        <TextBlock x:Name="bookingsTextBlock" HorizontalAlignment="Left" Margin="108,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="69"></TextBlock>
        <TextBlock x:Name="availableTextBlock" HorizontalAlignment="Left" Margin="225,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73"></TextBlock>
        <TextBox x:Name="numberOfCustomersTextBox" HorizontalAlignment="Left" Margin="615,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Text="Number of customers"/>
        <TextBox x:Name="customerNameTextBox" HorizontalAlignment="Left" Margin="615,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Customer Name"/>
        <TextBox x:Name="contactNumberTextBox" HorizontalAlignment="Left" Margin="615,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Contact Number"/>
        <Button Content="Customer Search"  HorizontalAlignment="Left" Margin="675,365,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
